<% if user_signed_in? %>

    <h1>Friends List</h1>

    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Twitter</th>
        </tr>
      </thead>
      <tbody>
      <div id="friends">
        <% @friends.each do |friend| %>
          <!-- <div id="<%= dom_id friend %>"> -->
            <% if friend.user == current_user %>
            <tr>
              <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
              </td>
              <td>
                <%= friend.email %>
              </td>
              <td>
                <%= friend.phone %>
              </td>
              <td>
                <%= friend.twitter %>
              </td>
              <td>
                <%= button_to "Delete", friend, method: :delete, class:"btn btn-outline-danger btn-sm" %>
              </td>
              <% end %>
            <% end %>
          </div>
      </tbody>
    </table>



    <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1>Hello World!#index</h1>
<p>This is my first Rails Webpage</p>
<% end %>