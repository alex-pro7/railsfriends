<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :first_name, class:"form-control mt-3 mb-3",
     placeholder:"First Name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class:"form-control mb-3",
     placeholder:"Last Name" %>
  </div class="form-group">

  <div class="form-group">
    <%= form.text_field :email, class:"form-control mb-3",
    placeholder:"Email Address" %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone, class:"form-control mb-3",
    placeholder:"Phone Number" %>
  </div>

  <div>
    <%= form.text_field :twitter, class:"form-control mb-3",
     placeholder:"Twitter" %>
  </div>

  <div>
      <%= form.number_field :user_id, id: :friend_user_id, class:"form-control mb-3 disabled",
       value:current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
